{
    "compilerOptions": {
      "module": "NodeNext",
      "esModuleInterop": true,
      "moduleResolution": "nodenext",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017"
    },
    "compileOnSave": true,
    "include": [
      "src",
    ]
  }